<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="com.example.movieapp.util.Status"/>

        <variable
                name="viewModel"
                type="com.example.movieapp.observer.MoviesViewModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <include
                android:id="@+id/progress"
                layout="@layout/layout_loading"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:status="@{viewModel.listStatus}"/>

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_movies"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                android:padding="@dimen/material_component_cards_padding"
                android:clipToPadding="false"
                app:spanCount="3"
                app:viewVisible="@{viewModel.listStatus == Status.SUCCESS}"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:listitem="@layout/list_item_movies"/>

        <include
                layout="@layout/layout_empty"
                app:status="@{viewModel.listStatus}"
                app:displayText="@{@string/image_description}"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>