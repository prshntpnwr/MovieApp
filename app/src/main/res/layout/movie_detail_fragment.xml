<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="com.example.movieapp.util.Status"/>

        <variable
                name="viewModel"
                type="com.example.movieapp.observer.MovieDetailViewModel"/>

    </data>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:viewVisible="@{viewModel.detailStatus == Status.SUCCESS}">

                <ImageView
                        android:id="@+id/backdrop"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/backdrop_height"
                        android:scaleType="centerCrop"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:imageUrl="@{viewModel.movieDetail.backdropUrl}"/>

                <ImageView
                        android:id="@+id/poster"
                        android:layout_width="@dimen/poster_width"
                        android:layout_height="@dimen/poster_height"
                        android:scaleType="centerCrop"
                        android:layout_margin="@dimen/activity_margin_mid"
                        android:layout_marginTop="@dimen/activity_margin_mid"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/backdrop"
                        app:imageUrl="@{viewModel.movieDetail.posterUrl}"
                        app:layout_constraintBottom_toBottomOf="@id/backdrop"/>

                <TextView
                        android:id="@+id/rating"
                        style="@style/AppTextAppearance.Medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/avd_rated"
                        android:drawablePadding="@dimen/padding_mid"
                        android:layout_margin="@dimen/activity_horizontal_margin"
                        android:layout_marginLeft="@dimen/activity_margin_mid"
                        android:layout_marginStart="@dimen/activity_margin_mid"
                        android:gravity="center_vertical"
                        android:text='@{" "+ viewModel.movieDetail.voteAverage}'
                        app:layout_constraintTop_toBottomOf="@id/backdrop"
                        app:layout_constraintStart_toStartOf="parent"
                        tools:text="9.3"/>

                <TextView
                        style="@style/AppTextAppearance.Body2"
                        android:id="@+id/category"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/activity_margin_small"
                        android:layout_marginLeft="@dimen/activity_margin_mid"
                        android:layout_marginStart="@dimen/activity_margin_mid"
                        android:layout_marginEnd="@dimen/activity_margin_mid"
                        android:layout_marginRight="@dimen/activity_margin_mid"
                        android:textColor="@color/secondary_text"
                        app:layout_constraintEnd_toStartOf="@id/poster"
                        app:layout_constraintStart_toStartOf="@id/rating"
                        app:layout_constraintTop_toBottomOf="@id/rating"
                        app:genresList="@{viewModel.movieDetail.genres}"
                        tools:text="Drama | Action | Thriller"/>

                <TextView
                        android:id="@+id/language"
                        style="@style/AppTextAppearance.Primary.Body1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/card_raised_elevation"
                        android:paddingStart="@dimen/card_raised_elevation"
                        android:paddingEnd="@dimen/card_raised_elevation"
                        android:paddingRight="@dimen/card_raised_elevation"
                        android:background="@android:drawable/ic_notification_overlay"
                        android:textColor="@android:color/white"
                        android:layout_marginTop="@dimen/activity_margin_mid"
                        android:layout_marginBottom="@dimen/activity_vertical_margin"
                        app:layout_constraintVertical_bias="0"
                        app:upperString="@{viewModel.movieDetail.originalLanguage}"
                        app:layout_constraintEnd_toEndOf="@id/rating"
                        app:layout_constraintTop_toBottomOf="@id/category"
                        app:layout_constraintStart_toStartOf="@id/category"
                        app:layout_constraintBottom_toTopOf="@id/overview_title"
                        tools:text="EN" />

                <TextView
                        android:id="@+id/overview_title"
                        style="@style/AppTextAppearance.Primary.Body1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/activity_margin_mid"
                        android:layout_marginEnd="@dimen/activity_margin_mid"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:layout_marginBottom="@dimen/activity_vertical_margin"
                        android:drawableLeft="@drawable/avd_subject"
                        android:drawablePadding="@dimen/margin_text_vertical"
                        android:gravity="center_vertical"
                        android:text="@string/synopsis"
                        app:layout_constraintBottom_toTopOf="@id/overview"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/rating"
                        app:layout_constraintTop_toBottomOf="@id/language"
                        tools:text="@string/synopsis" />

                <TextView
                        android:id="@+id/overview"
                        style="@style/AppTextAppearance.Secondary.Body1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/activity_margin_mid"
                        android:padding="@dimen/padding_small"
                        android:text="@{viewModel.movieDetail.overview}"
                        app:layout_constraintEnd_toEndOf="@+id/overview_title"
                        app:layout_constraintStart_toStartOf="@+id/rating"
                        app:layout_constraintTop_toBottomOf="@id/overview_title"
                        tools:text="The movie start where no one expected it to start. In the middle of nowhere basically." />

                <TextView
                        android:id="@+id/minutes"
                        style="@style/AppTextAppearance.Secondary.Body1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/activity_horizontal_margin"
                        android:drawableLeft="@drawable/avd_access_time_dark"
                        android:drawablePadding="@dimen/padding_mid"
                        android:layout_marginStart="@dimen/activity_margin_mid"
                        android:layout_marginLeft="@dimen/activity_margin_mid"
                        android:layout_marginTop="@dimen/activity_margin_mid"
                        app:hourMinute="@{viewModel.movieDetail.runtime}"
                        app:layout_constraintTop_toBottomOf="@+id/overview"
                        app:layout_constraintStart_toStartOf="@+id/overview"
                        app:layout_constraintEnd_toStartOf="@id/release_date"
                        app:layout_constraintVertical_chainStyle="packed"
                        app:layout_constraintVertical_bias="0"
                        app:layout_constraintBottom_toTopOf="@+id/cast_title_text_view"
                        tools:text="142 minutes"/>

                <TextView
                        android:id="@+id/release_date"
                        style="@style/AppTextAppearance.Secondary.Body1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/activity_horizontal_margin"
                        android:drawableLeft="@drawable/avd_event_dark"
                        android:drawablePadding="@dimen/padding_mid"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/overview"
                        app:layout_constraintStart_toEndOf="@id/minutes"
                        app:timeStamp="@{viewModel.movieDetail.releaseDate}"
                        app:format="@{@string/date_format}"
                        app:emptyTxt="@{@string/empty_text}"
                        tools:text="21 April 2018"/>

                <TextView
                        android:id="@+id/cast_title_text_view"
                        style="@style/AppTextAppearance.Primary.Body1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/activity_horizontal_margin"
                        android:drawableLeft="@drawable/avd_people_outline"
                        android:drawablePadding="@dimen/margin_text_vertical"
                        android:gravity="center_vertical"
                        android:text="@string/cast"
                        app:viewVisible="@{viewModel.castVisible}"
                        app:layout_constraintBottom_toTopOf="@id/view_Pager_trailer"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/overview_title"
                        app:layout_constraintTop_toBottomOf="@id/minutes"
                        tools:text="@string/cast" />

                <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_cast"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/material_component_cards_padding"
                        android:clipToPadding="false"
                        android:layout_marginTop="@dimen/activity_margin_mid"
                        android:layout_marginBottom="@dimen/activity_horizontal_margin"
                        android:orientation="horizontal"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        app:viewVisible="@{viewModel.castVisible}"
                        app:layout_constraintTop_toBottomOf="@id/cast_title_text_view"
                        app:layout_constraintBottom_toTopOf="@id/trailer_title"
                        app:layout_constraintStart_toStartOf="@id/overview_title"
                        app:layout_constraintEnd_toEndOf="parent"
                        tools:listitem="@layout/list_item_cast"/>

                <TextView
                        android:id="@+id/trailer_title"
                        style="@style/AppTextAppearance.Primary.Body1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/activity_horizontal_margin"
                        android:drawableLeft="@drawable/avd_clip"
                        android:drawablePadding="@dimen/margin_text_vertical"
                        android:gravity="center_vertical"
                        android:text="@string/trailer"
                        app:viewVisible="@{viewModel.trailerVisible}"
                        app:layout_constraintBottom_toTopOf="@id/view_Pager_trailer"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/overview_title"
                        app:layout_constraintTop_toBottomOf="@id/rv_cast"
                        tools:text="@string/trailer" />

                <androidx.viewpager2.widget.ViewPager2
                        android:id="@+id/view_Pager_trailer"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/view_pager_height"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:layout_marginBottom="@dimen/activity_margin_mid"
                        app:viewVisible="@{viewModel.trailerVisible}"
                        app:layout_constraintTop_toBottomOf="@id/trailer_title"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toTopOf="@id/review_title_text_view"/>

                <TextView
                        android:id="@+id/review_title_text_view"
                        style="@style/AppTextAppearance.Primary.Body1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/activity_horizontal_margin"
                        android:drawableLeft="@drawable/avd_announcement_black"
                        android:drawablePadding="@dimen/margin_text_vertical"
                        android:gravity="center_vertical"
                        android:text="@string/reviews"
                        app:viewVisible="@{viewModel.reviewsVisible}"
                        app:layout_constraintTop_toBottomOf="@id/view_Pager_trailer"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@id/overview_title"
                        app:layout_constraintBottom_toTopOf="@id/rv_review"
                        tools:text="@string/reviews" />

                <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_review"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/material_component_cards_padding"
                        android:clipToPadding="false"
                        android:layout_marginTop="@dimen/activity_margin_mid"
                        android:layout_marginBottom="@dimen/activity_horizontal_margin"
                        android:orientation="horizontal"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        app:viewVisible="@{viewModel.reviewsVisible}"
                        app:layout_constraintTop_toBottomOf="@id/review_title_text_view"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="@id/overview_title"
                        app:layout_constraintEnd_toEndOf="parent"
                        tools:listitem="@layout/list_item_review"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <include
                    android:id="@+id/progress"
                    layout="@layout/layout_loading"
                    app:status="@{viewModel.detailStatus}"/>

            <include
                    layout="@layout/layout_empty"
                    app:status="@{viewModel.detailStatus}"
                    app:displayText="@{@string/image_description}"/>

        </FrameLayout>

    </ScrollView>

</layout>